<Window x:Class="WpfDemoTowerSql.EditTowerDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoTowerSql"
        mc:Ignorable="d"
        Title="Edit Tower" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Edit selected tower." />
            <TextBlock Text="Name" />
            <TextBox Name="NameBox" />
            <TextBlock Text="Height in meter." />
            <TextBox Name="HeightBox" />
            <StackPanel Orientation="Horizontal">
                <Button Name="Save" Content="Save" Click="Save_Click"/>
                <Button Name="Cancel" Content="Cancel" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
