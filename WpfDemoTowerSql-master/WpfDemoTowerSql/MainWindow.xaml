<Window x:Class="WpfDemoTowerSql.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoTowerSql"
        mc:Ignorable="d"
        Title="WPF Demo Tower SQL" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Add a tower or select a tower to edit or delete." />
            <ListView Name="ListOfTowers" />
            <StackPanel Orientation="Horizontal">
                <Button Name="AddData" Content="Add" Click="AddData_Click"/>
                <Button Name="EditData" Content="Edit" Click="EditData_Click" />
                <Button Name="DeleteData" Content="Delete" Click="DeleteData_Click" />
            </StackPanel>
            <TextBox Name="Path" />
        </StackPanel>
    </Grid>
</Window>
